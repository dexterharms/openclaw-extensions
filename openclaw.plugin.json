{
  "id": "mail-access",
  "name": "mail-access",
  "description": "Secure email access plugin with IMAP, SMTP, and security scanning capabilities",
  "version": "1.0.0",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "imap": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "host": {
            "type": "string",
            "description": "IMAP server host"
          },
          "port": {
            "type": "number",
            "description": "IMAP server port"
          },
          "user": {
            "type": "string",
            "description": "IMAP username"
          },
          "password": {
            "type": "string",
            "description": "IMAP password"
          },
          "useStarttls": {
            "type": "boolean",
            "description": "Use STARTTLS for IMAP"
          }
        },
        "required": ["host", "port", "user", "password"]
      },
      "smtp": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "host": {
            "type": "string",
            "description": "SMTP server host"
          },
          "port": {
            "type": "number",
            "description": "SMTP server port"
          },
          "user": {
            "type": "string",
            "description": "SMTP username"
          },
          "password": {
            "type": "string",
            "description": "SMTP password"
          },
          "useStarttls": {
            "type": "boolean",
            "description": "Use STARTTLS for SMTP"
          },
          "from": {
            "type": "string",
            "description": "Default from address"
          }
        },
        "required": ["host", "port", "user", "password", "from"]
      },
      "folders": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "inbox": {
            "type": "string"
          },
          "safeInbox": {
            "type": "string"
          },
          "quarantine": {
            "type": "string"
          },
          "spam": {
            "type": "string"
          },
          "trash": {
            "type": "string"
          }
        }
      },
      "listener": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "pollInterval": {
            "type": "number"
          },
          "useIdle": {
            "type": "boolean"
          }
        }
      },
      "security": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "knownSafeSenders": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "criticalThreats": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "phishingKeywords": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "attachmentBlacklist": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "linkThreatPatterns": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "credentialRequestPhrases": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "notifications": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "enabled": {
            "type": "boolean"
          }
        }
      }
    },
    "required": ["imap", "smtp", "folders", "listener", "security"]
  }
}
